<%- include("partials/header.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Edit BlogPost</title>
</head>
<body>

<div class="container my-5">
    <h1 class="display-4 fw-bold text-body-emphasis text-center mb-5">Edit your BlogPost</h1>

    <div class="form-container mx-auto">
        <form action="/edit/<%= id %>" method="POST">
            <div class="form-group mb-4">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= blog.email %>" required>
            </div>
            <div class="form-group mb-4">
                <label for="author">Author name</label>
                <input type="text" class="form-control" id="author" name="author" value="<%= blog.author %>" required>
            </div>
            <div class="form-group mb-4">
                <label for="category">Select Category</label>
                <select class="form-control" id="category" name="category" required>
                    <option <%= blog.category === 'Tech' ? 'selected' : '' %>>Tech</option>
                    <option <%= blog.category === 'Travel' ? 'selected' : '' %>>Travel</option>
                    <option <%= blog.category === 'Design' ? 'selected' : '' %>>Design</option>
                    <option <%= blog.category === 'Health' ? 'selected' : '' %>>Health</option>
                    <option <%= blog.category === 'Science' ? 'selected' : '' %>>Science</option>
                </select>
            </div>
            <div class="form-group mb-4">
                <label for="content">Blog content</label>
                <textarea class="form-control" id="content" name="content" rows="10" required><%= blog.content %></textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Update</button>
        </form>            
    </div>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
  crossorigin="anonymous"
></script>
</body>
</html>

