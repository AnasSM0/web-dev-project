<%- include("partials/header.ejs") %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Niche Journal</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      body {
        font-family: 'Arial', sans-serif;
      }

      .hero-section {
        background-color: #f8f9fa;
        padding: 60px 0;
      }

      .featured-image {
        max-height: 500px;
        object-fit: cover;
      }

      .blog-card img {
        object-fit: cover;
        height: 100%;
        border-radius: 5px;
      }

      .blog-card {
        transition: transform 0.3s;
      }

      .blog-card:hover {
        transform: scale(1.02);
      }

      .popular-category img {
        object-fit: cover;
        height: 50px;
        border-radius: 5px;
      }

      .footer-title {
        font-weight: bold;
        color: #343a40;
      }

      .nav-link {
        color: #6c757d;
      }

      .nav-link:hover {
        color: #343a40;
      }
    </style>
  </head>
  <body>

    <!-- Hero Section -->
    <div class="hero-section text-center">
      <div class="container">
        <h1 class="display-4 fw-bold text-body-emphasis">The Niche Journal</h1>
        <p class="lead mb-4 mt-2">Your go-to resource for in-depth articles on tech, design, and trends. Stay ahead with expert insights and fresh perspectives.</p>
        <a href="/blogs" class="btn btn-primary btn-lg">Explore Blogs</a>
      </div>
    </div>

    <!-- Hero Image -->
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <img src="/images/background.jpg" class="img-fluid border rounded-3 shadow-lg my-5 featured-image" alt="Tech and Design Trends">
        </div>
      </div>
    </div>

    <!-- Featured Articles Section -->
    <div class="container">
      <h2 class="text-center my-5">Featured Articles</h2>
    
      <div class="row">
        <div class="col-md-6">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm blog-card">
            <div class="col p-4 d-flex flex-column position-static">
              <strong class="d-inline-block mb-2 text-primary-emphasis">Tech</strong>
              <h3 class="mb-0">Understanding AI: The Future of Automation</h3>
              <div class="mb-1 text-body-secondary">August 1, 2024</div>
              <p class="card-text mb-auto">Explore how AI is revolutionizing industries and what it means for the future of work and technology.</p>
              <a href="/ai-automation" class="icon-link gap-1 icon-link-hover stretched-link">
                Continue reading
                <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
              </a>
            </div>
            <div class="col-auto d-none d-lg-block">
              <img src="/images/ai-automation.png" class="img-fluid" width="200" height="250" alt="AI and Automation">
            </div>
          </div>
        </div>
    
        <div class="col-md-6">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm blog-card">
            <div class="col p-4 d-flex flex-column position-static">
              <strong class="d-inline-block mb-2 text-success-emphasis">Design</strong>
              <h3 class="mb-0">The Evolution of UX/UI Design</h3>
              <div class="mb-1 text-body-secondary">July 25, 2024</div>
              <p class="mb-auto">A deep dive into how user experience and interface design are evolving in the digital age.</p>
              <a href="/ux-ui-evolution" class="icon-link gap-1 icon-link-hover stretched-link">
                Continue reading
                <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
              </a>
            </div>
            <div class="col-auto d-none d-lg-block">
              <img src="/images/ux-ui-evolution.png" class="img-fluid" width="200" height="250" alt="UX/UI Design">
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Popular Categories Section -->
    <h2 class="text-center my-5">Popular Categories</h2>

    <div class="container d-flex justify-content-center">
      <div>
        <ul class="list-unstyled">
          <li class="popular-category">
            <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" href="/tech-insights">
              <img src="/images/tech-insights.jpg" class="img-fluid" width="100" height="50" alt="Tech Category">
              <div class="col-lg-8">
                <h6 class="mb-0">Tech Insights: Whatâ€™s Trending in 2024?</h6>
                <small class="text-body-secondary">January 15, 2024</small>
              </div>
            </a>
          </li>
          <li class="popular-category">
            <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" href="/design-strategies">
              <img src="/images/design-strategies.png" class="img-fluid" width="100" height="50" alt="Design Category">
              <div class="col-lg-8">
                <h6 class="mb-0">Design Strategies: Building User-Centered Products</h6>
                <small class="text-body-secondary">January 14, 2024</small>
              </div>
            </a>
          </li>
          <li class="popular-category">
            <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" href="/trends">
              <img src="/images/global-trends.jpg" class="img-fluid" width="100" height="50" alt="Trends Category">
              <div class="col-lg-8">
                <h6 class="mb-0">Global Trends Shaping the Future</h6>
                <small class="text-body-secondary">January 13, 2024</small>
              </div>
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>

<%- include("partials/footer.ejs") %>
