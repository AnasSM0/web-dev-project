<%- include("partials/blogheader.ejs") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Blogs</title>
</head>
<body>

<div class="container">
    <h1 class="my-5">Blogs</h1>

    <% if (message) { %>
        <div class="alert alert-success"><%= message %></div>
    <% } %>

    <% blogs.forEach((blog, index) => { %>
        <div class="card my-4">
            <div class="card-body">
                <h5 class="card-title"><%= blog.category %></h5>
                <h6 class="card-subtitle mb-2 text-muted">By <%= blog.author %> | <%= blog.email %></h6>
                <p class="card-text"><%= blog.content.substring(0, 150) %>...</p>
                
                <!-- Read More button -->
                <a href="/blogs/<%= index %>" target="_blank" class="btn btn-primary btn-sm">Read More</a>
                
                <!-- Edit and Delete options -->
                <a href="/edit/<%= index %>" class="btn btn-warning btn-sm">Edit</a>
                <form action="/delete/<%= index %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </div>
        </div>
    <% }); %>
</div>

<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
  crossorigin="anonymous"
></script>
</body>
</html>

