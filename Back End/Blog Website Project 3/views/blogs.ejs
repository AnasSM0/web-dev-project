<%- include("partials/blogheader.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogs</title>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous"
    />
</head>
<body>
    <div class="container">
        <% if (message) { %>
            <div class="alert alert-success mt-3" role="alert">
                <%= message %>
            </div>
        <% } %>

        <h1 class="display-4 fw-bold text-body-emphasis text-center">All Blogs</h1>
        <div class="row">
            <% blogs.forEach(function(blog) { %>
                <div class="col-md-6">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= blog.author %> - <%= blog.category %></h5>
                            <p class="card-text"><%= blog.content %></p>
                            <p class="card-text"><small class="text-muted">Email: <%= blog.email %></small></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"
    ></script>
</body>
</html>
